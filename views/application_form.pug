doctype html
html 
    head 
        title Application Form
    body
        h1 Hostel Application Form
        br
        hr 
        br
        form(method = 'GET', action = './', name = 'applicationForm')
            table 
                tr 
                    td  Name 
                    td
                        input(type = 'text' placeholder = "Name" name = 'studentName')
                tr 
                    td  Father's Name
                    td 
                        input(type = 'text' placeholder = "Father's Name" name = 'fathersName')
                tr 
                    td  Mother's Name 
                    td 
                        input(type = 'text' placeholder = "Mother's Name" name = 'mothersName')
                tr 
                    td  Email 
                    td  
                        input(type = 'email' placeholder = "Email Address" name = 'email')
                tr 
                    td  Contact Number 
                    td 
                        input(type = 'number' placeholder = "Contact Number" name = 'contactNumber')
                tr 
                    td Guardian's Contact Number
                    td 
                        input(type = 'number' placeholder = "Guardian's Contact Number" name = 'guardianContactNumber')
                tr 
                    td Date of Birth 
                    td 
                        input(type = 'date' placeholder = "Date of Birth" name = 'dob')
                tr
                    td Gender 
                    td  
                        label Male 
                        input(type = 'radio' value = "male" name = "gender")
                        label Female 
                        input(type = 'radio' value = "female" name = "gender")
                        label Others
                        input(type = 'radio' value = "others" name = "gender")
                tr 
                    td Blood Group 
                    td 
                        select(name = 'bloodgroup')
                            option(value = '0') [-- Choose One --]
                            option(value="O+") O+
                            option(value="Oâˆ’") O-
                            option(value="A+") A+
                            option(value="A-") A-
                            option(value="B+") B+
                            option(value="B-") B-
                            option(value="AB+") AB+
                            option(value="AB-") AB-
                tr
                    td(colspan = '2')
                        br
                        hr
                        br
                .address 
                    tr
                        td Permanent Address 
                        td 
                            input(type ='text' placeholder = "Address" name = 'address')
                    tr 
                        td City
                        td 
                            input(type = 'text' placeholder = "City" name ='city')
                    tr 
                        td District 
                        td 
                            input(type ='text' placeholder = "District" name = 'city')
                    tr 
                        td State 
                        td 
                            input(type = 'text' placeholder = "State" name = 'state')
                    tr 
                        td Pincode 
                        td 
                            input(type = 'number' placeholder = "Pincode" name = 'pincode')
                tr
                    td(colspan = '2')
                        br
                        hr
                        br
                .college 
                    tr 
                        td Department 
                        td 
                            select(name = 'department')
                                option(value = '0') [-- Choose One -- ]
                                option(value="Computer Science Engineering") Computer Science Engineering
                                option(value="Information Technology") Information Technology
                                option(value="Mechanical Engineering") Mechanical Engineering
                                option(value="Electrical Engineering") Electrical Engineering
                                option(value="Chemical Engineering") Chemical Engineering
                                option(value="Production Engineering") Production Engineering
                                option(value="Textile Engineering") Textile Engineering
                                option(value="Biotechnology Engineering") Biotechnology Engineering
                                option(value="Instrumentation And Electronics Engineering") Instrumentation And Electronics Engineering
                                option(value="Electronics And telecommunication") Electronics And telecommunication
                                option(value="Civil Engineering") Civil Engineering
                                option(value="Food Technology Engineering") Food Technology Engineering
                                option(value="Power Engineering") Power Engineering
                                option(value="Metallurgy Engineering") Metallurgy Engineering
                                option(value="Printing Engineering") Printing Engineering
                                option(value="Pharmacy") Pharmacy
                                option(value="Architechture") Architechture
                    tr 
                        td Current year
                        td 
                            select(name = 'currentyear')
                                option(value = '0') [-- Choose One --]
                                option(value = 'ug1') UG-1
                                option(value = 'ug2') UG-2
                                option(value = 'ug3') UG-3
                                option(value = 'ug4') UG-4
                                option(value = 'ug5') UG-5

                    tr 
                        td Roll Number 
                        td 
                            input(type = 'number' placeholder = "Roll Number" name = 'rollNumber')
                    
                    tr 
                        td Year of Admission
                        td 
                            input(type = 'number' min = 1990 max = 2990 step = 1 placeholder = "Year of Admission" name = 'yearOfAdmission')
                tr 
                    td(colspan = '2', align = 'center')
                        input(type = 'submit', value = 'Submit Application')


                